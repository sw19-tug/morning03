<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolChooserMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/drawPointButton"
        android:text="@string/drawPointButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="chooseNewTool"
        />

    <Button
        android:id="@+id/drawLineButton"
        android:text="@string/drawLineButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="chooseNewTool"
        />

    <Button
        android:id="@+id/drawFillButton"
        android:text="@string/drawFillButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="chooseNewTool"
        />

    <Button
        android:id="@+id/eraserButton"
        android:text="@string/eraserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="chooseNewTool"
        />

    <Button
        android:id="@+id/drawShapesButton"
        android:text="@string/drawShapesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="chooseNewTool"
        />

    <Button
        android:id="@+id/drawPathButton"
        android:text="@string/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="chooseNewTool"
        />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_photo_camera_black_24dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:drawablePadding="15dp"
        android:gravity="start|center_vertical"
        android:onClick="chooseNewTool"
        android:text="@string/drawCameraPicture" />


</LinearLayout>